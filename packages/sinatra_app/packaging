set -e -x

ruby_version=ruby-2.6.8-r0.58.0

source /var/vcap/packages/${ruby_version}/bosh/compile.env
bundle_cmd=/var/vcap/packages/${ruby_version}/bin/bundle

bosh_bundle
bosh_generate_runtime_env

mkdir -p ${BOSH_INSTALL_TARGET}
cp -Ra sinatra_app/* ${BOSH_INSTALL_TARGET}
cd ${BOSH_INSTALL_TARGET}

${bundle_cmd} install --deployment --local --without development test
